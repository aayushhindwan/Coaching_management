<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/backgroundcolor"
        android:clipToPadding="false"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/bb1"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:background="@drawable/black"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/im1"
                android:layout_width="45dp"
                android:layout_height="49dp"
                android:background="@color/backgroundcolor"
                android:contentDescription="TODO"
                android:padding="4dp"
                android:src="@drawable/teacher" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="23dp"
                android:text="Make Attendance"
                android:textColor="@color/common_google_signin_btn_text_dark_default"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/backgroundcolor"
            android:clipToPadding="false"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/bb2"
                android:layout_width="150dp"
                android:layout_height="110dp"
                android:background="@drawable/black"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/im2"
                    android:layout_width="50dp"
                    android:layout_height="45dp"
                    android:background="@color/backgroundcolor"
                    android:padding="4dp"
                    android:src="@drawable/student" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:text="Take Attendance"
                    android:textColor="@color/common_google_signin_btn_text_dark_default"
                    android:textSize="14sp" />

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/backgroundcolor"
        android:clipToPadding="false"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/bb3"
            android:layout_width="150dp"
            android:layout_height="110dp"
            android:background="@drawable/black"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/im3"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@drawable/colorbackpink"
                android:padding="4dp"
                android:src="@drawable/ic_notifications_active_black_24dp" />

            <TextView
                android:id="@+id/textV3"
                android:layout_width="wrap_content"
                android:layout_height="23dp"
                android:text="Notifications"
                android:textColor="@color/common_google_signin_btn_text_dark_default"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/backgroundcolor"
            android:clipToPadding="false"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/bb4"
                android:layout_width="150dp"
                android:layout_height="110dp"
                android:background="@drawable/black"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/im4"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/colorbackpink"
                    android:padding="4dp"
                    android:src="@drawable/ic_dvr_black_24dp"
                    tools:ignore="VectorDrawableCompat" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:text="Student Record"
                    android:textColor="@color/common_google_signin_btn_text_dark_default"
                    android:textSize="14sp" />

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/backgroundcolor"
        android:clipToPadding="false"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/bb5"
            android:layout_width="150dp"
            android:layout_height="110dp"
            android:background="@drawable/black"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/im5"
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:background="@drawable/colorbackpink"
                android:contentDescription="TODO"
                android:padding="4dp"
                android:src="@drawable/ic_group_add_black_24dp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="23dp"
                android:text="Suggestions"
                android:textColor="@color/common_google_signin_btn_text_dark_default"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/backgroundcolor"
            android:clipToPadding="false"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/bb6"
                android:layout_width="150dp"
                android:layout_height="110dp"
                android:background="@drawable/black"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/im6"
                    android:layout_width="50dp"
                    android:layout_height="45dp"
                    android:background="@drawable/colorbackpink"
                    android:padding="4dp"
                    android:src="@drawable/ic_date_range_black_24dp"
                    tools:ignore="VectorDrawableCompat" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:text="Time Table"
                    android:textColor="@color/common_google_signin_btn_text_dark_default"
                    android:textSize="14sp" />

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/backgroundcolor"
        android:clipToPadding="false"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/bb7"
            android:layout_width="149dp"
            android:layout_height="match_parent"
            android:background="@drawable/black"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/im8"
                android:layout_width="50dp"
                android:layout_height="48dp"
                android:background="@drawable/colorbackpink"
                android:contentDescription="TODO"
                android:padding="4dp"
                android:src="@drawable/ic_system_update_alt_black_24dp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="23dp"
                android:text="Updates"
                android:textColor="@color/common_google_signin_btn_text_dark_default"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/backgroundcolor"
            android:clipToPadding="false"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/bb8"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:background="@drawable/black"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/im7"
                    android:layout_width="50dp"
                    android:layout_height="45dp"
                    android:background="@drawable/colorbackpink"
                    android:padding="4dp"
                    android:src="@drawable/ic_add_circle_outline_black_24dp" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:text="Logout"
                    android:textColor="@color/common_google_signin_btn_text_dark_default"
                    android:textSize="14sp" />

            </LinearLayout>



        </LinearLayout>


    </LinearLayout>

</LinearLayout>